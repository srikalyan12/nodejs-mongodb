<%- include('../includes/head.ejs') %>
<head />
<body>
  <%- include('../includes/nav.ejs') %>
  <main>
    <% if (orders.length > 0) { %>
      <ul>
        <% orders.forEach((order) => { %>
          <li>  
            <h1>Order - # <%= order._id %></h1>
            <ul>
              <% order.items.forEach(product => { %>
                <li><%= product.title %> (<%= product.qty %>)</li>
              <% }); %>
            </ul>
          </li>
        <% }); %>
      </ul>
    <% } else { %>
      <h1>No orders found</h1>
    <% } %>
  </main>
  <%- include('../includes/end.ejs') %>